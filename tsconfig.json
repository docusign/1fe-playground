{
  "extends": "ts-config-single-spa",
  "compilerOptions": {
    "declarationDir": "dist",
    "declaration": true,
    "skipLibCheck": true,
    "target": "esnext",
    "jsxImportSource": "@emotion/react",
    "jsx": "react-jsx",
    "typeRoots": [
      "../../node_modules/@types",
      "../../node_modules/",
      "./src/types/"
    ],
    "types": ["node", "jest", "@testing-library/jest-dom"],
    "paths": {
      "src/*": ["./src/*"]
    },
    "emitDeclarationOnly": false // to get type:check to work
  },
  "include": ["src/**/*"]
}
